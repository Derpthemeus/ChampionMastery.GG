	{{{block "scripts"}}}
</head>

<body>
<nav id="navbar">
	<a id="navbar-logo" href="/">
		<img id="navbar-logo-icon" src="/img/logo-icon.png" alt="ChampionMastery.GG">
		<img id="navbar-logo-title" src="/img/logo-text.png" alt="ChampionMastery.GG">
	</a>
	<div id="navbar-items">
		<a class="navbar-item" href="/highscores">Highscores</a>
		<a class="navbar-item" href="/faq">FAQ</a>
		<a class="navbar-item" href="https://github.com/Derpthemeus/ChampionMastery.GG">GitHub</a>
	</div>
	<button id="toggle-search-button" onclick="toggleNavbarLookupForm()">&#x25BC;</button>
	<div id="navbar-lookup">
		<form id="navbar-form" action="/summoner">
			<input type="text" name="summoner" placeholder="Summoner Name">
			<select id="region" name="region">
				{{#each regions}}
					<option value="{{this}}">
						{{this}}
					</option>
				{{/each}}
			</select>
			<button type="submit">
				<span>Lookup</span>
			</button>
		</form>
	</div>
</nav>

{{#if announcement.message}}
	<div id="announcement">
		{{#if announcement.link}}
			<a href="{{announcement.link}}">{{announcement.message}}</a>
		{{else}}
			{{announcement.message}}
		{{/if}}
	</div>
{{/if}}

<div id="content">
	{{{block "body"}}}
</div>

	<div id="footer">
		<span><a href="https://www.reddit.com/message/compose/?to=Derpthemeus">Message me on Reddit</a> or <a href="mailto:championmastery.gg@gmail.com">email me</a> (please read <a href="/faq">the FAQ</a> first)</span>

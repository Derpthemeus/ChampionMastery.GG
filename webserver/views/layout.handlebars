	<div id="navbar-items">
		<a class="navbar-item" href="/highscores">Highscores</a>
		<a class="navbar-item" href="/faq">FAQ</a>
		<a class="navbar-item" href="https://github.com/Derpthemeus/ChampionMastery.GG">GitHub</a>
	</div>
	<button id="toggle-search-button" onclick="toggleNavbarLookupForm()">&#x25BC;</button>
	<div id="navbar-lookup">
		<form id="navbar-form" action="/summoner">
			<input type="text" name="summoner" placeholder="Summoner Name">
			<select id="region" name="region">
				{{#each regions}}
					<option value="{{this}}">
						{{this}}
					</option>
				{{/each}}
			</select>
			<button type="submit">
				<span>Lookup</span>
			</button>
		</form>
	</div>
